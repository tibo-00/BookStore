@using System.Globalization;
@model BookStore.Models.Book.CatalogSearchViewModel

@{
    ViewData["Title"] = "Catalog";
}

<h1>Catalog</h1>
<h4>Books</h4>
<form asp-controller="Book" asp-action="Catalog" method="get" class="form-inline mb-5 p-3">
    <div class="d-flex">
        <div class="form-group d-flex align-items-center">
            <label for="searchTerm">Search: </label>
            <input id="searchTerm" asp-for="SearchString" class="form-control ml-1" />
        </div>
        <div class="form-group d-flex align-items-center">
            <label for="category">Category: </label>
            <select asp-for="BookGenre" asp-items="@(new SelectList(Model.Genres, "Id", "Name"))" class="form-control ml-1">
                <option value="">Choose an option...</option>
            </select>
        </div>
    </div><br />
    <div class="d-flex">
        <div class="form-check mx-3">
            <input class="form-check-input" type="checkbox" id="byTitle" name ="byTitle" />
            <label class="form-check-label">By Title</label>
        </div>
        <div class="form-check mx-3">
            <input class="form-check-input" type="checkbox" id="byAuthor" name="byAuthor" />
            <label class="form-check-label">By Author</label>
        </div>
        <div class="form-check mx-3" style="display: none;">
            <input class="form-check-input" type="checkbox" id="byISBN" name="byISBN" />
            <label class="form-check-label">By ISBN</label>
        </div>
        <div class="form-group">
            <button class="btn btn-primary">Search</button>
        </div>
    </div>
</form>
<hr />
@await Html.PartialAsync("_BookCatalog", @Model.Catalog)